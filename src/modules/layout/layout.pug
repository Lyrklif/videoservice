include ../icon/icon
include ../preloader/preloader
include ../modal/modal
include ../burger/burger
include ../site/site

doctype html
html(lang="ru")
  head
    block head
      -siteTitle= "Название страницы"
      -isMainPage = ''
    title #{siteTitle} - Видеосервис
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width,height=device-height,initial-scale=1.0,user-scalable=no,maximum-scale=1.0,viewport-fit=cover")
    meta(name="format-detection" content="telephone=no")
    meta(name="format-detection" content="address=no")
    meta(name="description" content="Template")
    meta(name="keywords" content="Template")
    meta(name="msapplication-TileColor" content="#ffffff")
    meta(name="msapplication-TileImage" content="favicon.ico")
    meta(name="msapplication-config" content="/browserconfig.xml")
    link(href="site.webmanifest" rel="manifest")
    link(href="favicon.ico" rel="icon" sizes="32x32" type="image/x-icon")
    link(href="favicon.ico" rel="icon" sizes="16x16" type="image/x-icon")
    link(href="favicon.ico" rel="apple-touch-icon" sizes="180x180")
    link(href="favicon.ico" rel="mask-icon" color="#5bbad5")

    //- preloader
    link(href="preloader/preloader.css" rel="stylesheet")
    script(src="preloader/preloader.js" defer)

    //- основные стили и скрипты
    link(href="styles/main.css" rel="stylesheet")
    script(src="scripts/main.js" defer)

  body.body_hidden
    //- Ссылки на страницы сайта
    -linkMainPage = 'https://github.com/Lyrklif/videoservice'
    //- END
    .svg-sprite#svg-sprite(data-path="images/sprite.svg")
    if (isMainPage)
      +preloader
    else
      +preloader2
    +site(isMainPage)
    +modal
    +burger