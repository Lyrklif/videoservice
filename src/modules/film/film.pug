//- film


include ../img/img
include ../link/link



//- +film('fileName', 'title')
mixin film(fileName, title, isApi)
  article.film
    a.film__inner(href="#", target="_blank", title=title)
      .film__content
        +img(fileName, title)(class="film__img", class!=isApi && 'js-film-img')
        .film__desk
          p.film__text.js-film-desc: block
      h3.film__title(class!=isApi && 'js-film-title')= title

