//- film


include ../img/img
include ../link/link



//- +film('fileName', 'title')
mixin film(fileName, title)
  article.film
    a.film__inner(href="#", target="_blank", title=title)
      .film__content
        +img(fileName, title)(class="film__img")
        .film__desk
          p.film__text.js-film-text: block
      h3.film__title= title

