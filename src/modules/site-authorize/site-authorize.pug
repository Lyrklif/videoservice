//- site-authorize


include ../btn/btn
include ../input/input
include ../btn-sign-out/btn-sign-out
include ../user-name/user-name




mixin site-authorize()
  .site-authorize&attributes(attributes)

    .site-authorize__sign-in.show.js-sign-in-wrap
      +btn-contained('Войти', '#authorize')(data-modal="authorize")
        |Войти

    .site-authorize__sign-out.js-sign-out-wrap
      +user-name()
      +btnSignOut()(class="site-authorize__sign-out-btn")