extends ../modules/layout/layout.pug

include ../modules/tabs/tabs
include ../modules/main-nav/main-nav
include ../modules/films/films
include ../modules/genres/genres
include ../modules/channel/channel
include ../modules/channels/channels



block head
  - siteTitle = "Главная"
  - isMainPage = 'main page'

block page
  main.page.container
    header.meta-title: h1 Видеосервис
    +main-nav
      +nav-item('Фильмы', 'films', 'active')
      +nav-item('Телеканалы', 'channels')
    //- tab #films
    +tab-content('films', 'active')
      section
        header: h2 Новинки
        +films
      section
        header: h2 Жанры
        +genres

    //- tab #channels
    +tab-content('channels')
      section
        header.meta-title: h2 Телепрограмма 
        +channels